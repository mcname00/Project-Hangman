        self.quit_button.pack(pady=(0, 10))

    def get_leaderboard_text(self, filename):
        if not os.path.exists(filename):
            return "No scores yet!"
        with open(filename, "r") as f:
            scores = [line.strip().split(":") for line in f if ":" in line]
            scores = sorted(scores, key=lambda x: int(x[1]), reverse=True)[:10]
            if not scores:
                return "No scores yet!"
            places = ["1st", "2nd", "3rd"] + [f"{i}th" for i in range(4, 11)]
            lines = []
            for idx, (name, score) in enumerate(scores):
                place = places[idx] if idx < len(places) else f"{idx+1}th"
                lines.append(f"{place:>4}: {name:<12} {score:>5}")
            return "\n".join(lines)

    def start_game(self, mode):
        self.frame.destroy()
        self.challenge_button.destroy()
        if mode == "blitz":
            BlitzMode(self.master, lambda: StartScreen(self.master, self.start_callback))
        elif mode == "one_life":
            OneLifeMode(self.master, lambda: StartScreen(self.master, self.start_callback))
        else:
            HangmanGUI(self.master)

# -------------------- Normal Mode --------------------
class HangmanGUI:
    def __init__(self, master, player_name=None):
        self.master = master
        if player_name is None:
            self.player_name = simpledialog.askstring("Player Name", "Enter your name:", parent=master)
            if not self.player_name:
                self.player_name = "Player"
        else:
            self.player_name = player_name

        self.points = 0
        self.chosen_word = list(random.choice(word_list))
        self.blank_list = ["_"] * len(self.chosen_word)
        self.update_display = 0
        self.guessed_letters = set()

        self.seconds = 0
        self.timer_running = True 
        self.timer_label = tk.Label(master, text="Time: 0s", font=("Arial", 10))
        self.timer_label.place(relx=1.0, y=0, anchor="ne")
        self.update_timer()
        
        self.label = tk.Label(master, text=" ".join(self.blank_list), font=("Arial", 24))
        self.label.pack()

        self.entry = tk.Entry(master)
        self.entry.pack()

        self.guess_button = tk.Button(master, text="Guess", command=self.make_guess)
        self.guess_button.pack()

        self.hangman_label = tk.Label(master, text=HANGMANPICTURES[self.update_display], font=("Courier", 16), justify="left")
        self.hangman_label.pack()
        self.entry.bind("<Return>", lambda event: self.make_guess())  

        self.letter_bank_label = tk.Label(master, text="Guessed Letters: ")
        self.letter_bank_label.pack()

        self.message = tk.Label(master, text="")
        self.message.pack()

        self.points_label = tk.Label(master, text=f"Points: {self.points}")
        self.points_label.pack()

        self.button_frame = tk.Frame(master)
        self.button_frame.pack(pady=10)

        self.reset_button = tk.Button(self.button_frame, text="Play Again", command=self.reset_game)
        self.reset_button.pack(side="left", padx=5)

        self.menu_button = tk.Button(self.button_frame, text="Back to Menu", command=self.back_to_menu)
        self.menu_button.pack(side="left", padx=5)

        # Bind F1 to reveal the word
        self.master.bind("<F1>", lambda event: self.reveal_word())

    def reveal_word(self):
        self.label.config(text=" ".join(self.chosen_word))
        self.message.config(text=f"Cheat activated! The word is: {''.join(self.chosen_word)}")

    def back_to_menu(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        StartScreen(self.master, lambda mode: HangmanGUI(self.master))

    def save_score(self):
        scores = []
        if os.path.exists(LEADERBOARD_FILE):
            with open(LEADERBOARD_FILE, "r") as f:
                for line in f:
                    if ":" in line:
                        name, score = line.strip().split(":", 1)
                        if name != self.player_name:
                            scores.append((name, score))
        scores.append((self.player_name, str(self.points)))
        with open(LEADERBOARD_FILE, "w") as f:
            for name, score in scores:
                f.write(f"{name}:{score}\n")

    def make_guess(self):
        guess = self.entry.get().lower()
        self.entry.delete(0, tk.END)
        if not guess:
            self.message.config(text="You are supposed to enter a letter or the full word!")
            return
        if not guess.isalpha():
            self.message.config(text="Only letters are allowed! No numbers or special characters.")
            return

        # Full word guess
        if guess == "".join(self.chosen_word):
            unrevealed = self.blank_list.count("_")
            self.points += 5 * unrevealed
            self.blank_list = self.chosen_word[:]
            self.label.config(text=" ".join(self.blank_list))
            self.message.config(text="WINNER WINNER CHICKEN DINNER!")
            self.timer_running = False
            self.points += 10
           
            # Award time bonus AFTER guessing
            if self.seconds < 30:
                self.points += 25
            elif self.seconds < 60:
                self.points += 10
            else:
                self.points += 5
            
            self.points_label.config(text=f"Points: {self.points}")
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.save_score()
            return

        # Single letter guess
        if len(guess) == 1:
            if guess in self.guessed_letters:
                self.message.config(text=f"You already guessed '{guess}' dum dum")
                return
            self.guessed_letters.add(guess)
            self.letter_bank_label.config(
                text="You Have Guessed...: " + " ".join(sorted(self.guessed_letters))
            )

        correct = False
        for i, letter in enumerate(self.chosen_word):
            if guess == letter:
                if self.blank_list[i] == "_":
                    self.points += 5
                self.blank_list[i] = guess
                correct = True
        
        if not correct and len(guess) == 1:
            self.points -= 3
            self.message.config(text=f"'{guess}' is not in the word!")
            if self.update_display < len(HANGMANPICTURES) - 1:
                self.update_display += 1

        self.points_label.config(text=f"Points: {self.points}")
        self.label.config(text=" ".join(self.blank_list))
        self.hangman_label.config(text=HANGMANPICTURES[self.update_display])

        # Check for win after updating the word
        if self.blank_list == self.chosen_word:
            self.message.config(text="WINNER WINNER CHICKEN DINNER!")
            self.timer_running = False
            self.points += 10
            
            # Award time bonus AFTER guessing
            if self.seconds < 30:
                self.points += 25
            elif self.seconds < 60:
                self.points += 10
            else:
                self.points += 5
            
            self.points_label.config(text=f"Points: {self.points}")
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.save_score()
        elif self.update_display == len(HANGMANPICTURES) - 1:
            self.message.config(text="YOU LOSE :(  The Word Was: " + "".join(self.chosen_word))
            self.timer_running = False  
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.save_score()

    def reset_game(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        HangmanGUI(self.master, self.player_name)

    def update_timer(self):
        
        if not hasattr(self, 'timer_running') or not self.timer_label.winfo_exists():
            return  
        
        minutes = self.seconds // 60
        seconds = self.seconds % 60
        self.timer_label.config(text=f"Time: {minutes}:{seconds:02d}")

        # Gold for <30s, Silver for <60s, Bronze for 60s+
        if self.seconds < 30:
            self.timer_label.config(fg="#FFD700")  # Gold
        elif self.seconds < 60:
            self.timer_label.config(fg="#C0C0C0")  # Silver
        else:
            self.timer_label.config(fg="#CD7F32")  # Bronze

        if self.timer_running:
            self.seconds += 1
        self.master.after(1000, self.update_timer)

# -------------------- Blitz Mode --------------------
class BlitzMode:
    def __init__(self, master, return_to_menu_callback, player_name=None):
        self.master = master
        self.return_to_menu_callback = return_to_menu_callback
        self.score = 0
        self.time_left = 180  # 3 minutes in seconds
        self.word_list = word_list[:]
        random.shuffle(self.word_list)
        self.current_word = ""
        self.guessed_letters = set()
        self.blank_list = []
        self.update_display = 0
        self.wrong_guesses = 0
        self.game_over = False

        if player_name is None:
            self.player_name = simpledialog.askstring("Player Name", "Enter your name:", parent=master)
            if not self.player_name:
                self.player_name = "Player"
        else:
            self.player_name = player_name

        for widget in self.master.winfo_children():
            widget.destroy()

        self.timer_label = tk.Label(master, text="Time: 03:00", font=("Arial", 16, "bold"))
        self.timer_label.pack(pady=(10, 0))

        self.score_label = tk.Label(master, text="Score: 0", font=("Arial", 12))
        self.score_label.pack()

        self.label = tk.Label(master, text="", font=("Arial", 24))
        self.label.pack(pady=10)

        self.entry = tk.Entry(master)
        self.entry.pack()
        self.entry.bind("<Return>", lambda event: self.make_guess())

        self.guess_button = tk.Button(master, text="Guess", command=self.make_guess)
        self.guess_button.pack(pady=5)

        self.hangman_label = tk.Label(master, text="", font=("Courier", 16), justify="left")
        self.hangman_label.pack()

        self.letter_bank_label = tk.Label(master, text="Guessed Letters: ")
        self.letter_bank_label.pack()

        self.message = tk.Label(master, text="")
        self.message.pack()

        self.next_word()
        self.update_timer()

    def save_score(self):
        scores = []
        if os.path.exists(LEADERBOARD_FILE_BLITZ):
            with open(LEADERBOARD_FILE_BLITZ, "r") as f:
                for line in f:
                    if ":" in line:
                        name, score = line.strip().split(":", 1)
                        if name != self.player_name:
                            scores.append((name, score))
        scores.append((self.player_name, str(self.score)))
        with open(LEADERBOARD_FILE_BLITZ, "w") as f:
            for name, score in scores:
                f.write(f"{name}:{score}\n")

    def next_word(self):
        if self.game_over:
            return
        self.current_word = list(random.choice(self.word_list))
        self.blank_list = ["_"] * len(self.current_word)
        self.guessed_letters = set()
        self.update_display = 0
        self.wrong_guesses = 0
        self.label.config(text=" ".join(self.blank_list))
        self.hangman_label.config(text=HANGMANPICTURES[self.update_display])
        self.letter_bank_label.config(text="Guessed Letters: ")
        self.message.config(text="")
        self.entry.delete(0, tk.END)
        self.entry.config(state="normal")
        self.guess_button.config(state="normal")

    def update_timer(self):
        minutes = self.time_left // 60
        seconds = self.time_left % 60
        self.timer_label.config(text=f"Time: {minutes:02d}:{seconds:02d}")
        if self.time_left > 0:
            self.time_left -= 1
            self.master.after(1000, self.update_timer)
        else:
            self.end_game()

    def make_guess(self):
        if self.game_over:
            return
        guess = self.entry.get().lower()
        self.entry.delete(0, tk.END)
        if not guess:
            self.message.config(text="You are supposed to enter a letter or the full word!")
            return
        if not guess.isalpha():
            self.message.config(text="Only letters are allowed! No numbers or special characters.")
            return

        if guess == "".join(self.current_word):
            self.score += 10 + 5 * self.blank_list.count("_")
            self.score_label.config(text=f"Score: {self.score}")
            self.message.config(text="Correct! Next word...")
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.master.after(1000, self.next_word)
            return

        if len(guess) == 1:
            if guess in self.guessed_letters:
                self.message.config(text=f"You already guessed '{guess}'")
                return
            self.guessed_letters.add(guess)
            self.letter_bank_label.config(
                text="Guessed Letters: " + " ".join(sorted(self.guessed_letters))
            )

        correct = False
        for i, letter in enumerate(self.current_word):
            if guess == letter:
                if self.blank_list[i] == "_":
                    self.score += 5  # Award 5 points for each new correct letter
                self.blank_list[i] = guess
                correct = True
        self.score_label.config(text=f"Score: {self.score}")

        if not correct and len(guess) == 1:
            self.update_display += 1
            self.hangman_label.config(text=HANGMANPICTURES[self.update_display])
            if self.update_display >= len(HANGMANPICTURES) - 1:
                self.message.config(text=f"You lose! The word was: {''.join(self.current_word)}")
                self.entry.config(state="disabled")
                self.guess_button.config(state="disabled")
                self.master.after(1500, self.next_word)
                return

        self.label.config(text=" ".join(self.blank_list))
        self.hangman_label.config(text=HANGMANPICTURES[self.update_display])

        if self.blank_list == self.current_word:
            self.score += 10
            self.score_label.config(text=f"Score: {self.score}")
            self.message.config(text="Correct! Next word...")
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.master.after(1000, self.next_word)

    def end_game(self):
        self.game_over = True
        self.entry.config(state="disabled")
        self.guess_button.config(state="disabled")
        self.save_score()
        for widget in self.master.winfo_children():
            widget.destroy()
        end_label = tk.Label(self.master, text="‚è∞ Time's Up! ‚è∞", font=("Arial", 24, "bold"))
        end_label.pack(pady=(40, 10))
        score_label = tk.Label(self.master, text=f"Your Score: {self.score}", font=("Arial", 18))
        score_label.pack(pady=(0, 10))
        info_label = tk.Label(self.master, text="Great job! Try again to beat your score.", font=("Arial", 12))
        info_label.pack(pady=(0, 20))
        play_again_btn = tk.Button(self.master, text="Play Again?", font=("Arial", 14), bg="#4CAF50", fg="white",
                                   command=self.restart)
        play_again_btn.pack(pady=10)
        menu_btn = tk.Button(self.master, text="Return to Menu", font=("Arial", 14), bg="#1976d2", fg="white",
                             command=self.back_to_menu)
        menu_btn.pack(pady=10)

    def restart(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        BlitzMode(self.master, self.return_to_menu_callback, self.player_name)

    def back_to_menu(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        self.return_to_menu_callback()

# -------------------- One Life Mode --------------------
class OneLifeMode:
    def __init__(self, master, return_to_menu_callback, player_name=None):
        self.master = master
        self.return_to_menu_callback = return_to_menu_callback
        self.score = 0
        self.word_list = word_list[:]
        random.shuffle(self.word_list)
        self.current_word = ""
        self.guessed_letters = set()
        self.blank_list = []
        self.update_display = 0

        if player_name is None:
            self.player_name = simpledialog.askstring("Player Name", "Enter your name:", parent=master)
            if not self.player_name:
                self.player_name = "Player"
        else:
            self.player_name = player_name

        for widget in self.master.winfo_children():
            widget.destroy()

        self.score_label = tk.Label(master, text="Score: 0", font=("Arial", 12))
        self.score_label.pack()

        self.label = tk.Label(master, text="", font=("Arial", 24))
        self.label.pack(pady=10)

        self.entry = tk.Entry(master)
        self.entry.pack()
        self.entry.bind("<Return>", lambda event: self.make_guess())

        self.guess_button = tk.Button(master, text="Guess", command=self.make_guess)
        self.guess_button.pack(pady=5)

        self.hangman_label = tk.Label(master, text="", font=("Courier", 16), justify="left")
        self.hangman_label.pack()

        self.letter_bank_label = tk.Label(master, text="Guessed Letters: ")
        self.letter_bank_label.pack()

        self.message = tk.Label(master, text="")
        self.message.pack()

        self.next_word()

    def save_score(self):
        scores = []
        if os.path.exists(LEADERBOARD_FILE_ONELIFE):
            with open(LEADERBOARD_FILE_ONELIFE, "r") as f:
                for line in f:
                    if ":" in line:
                        name, score = line.strip().split(":", 1)
                        if name != self.player_name:
                            scores.append((name, score))
        scores.append((self.player_name, str(self.score)))
        with open(LEADERBOARD_FILE_ONELIFE, "w") as f:
            for name, score in scores:
                f.write(f"{name}:{score}\n")

    def next_word(self):
        self.current_word = list(random.choice(self.word_list))
        self.blank_list = ["_"] * len(self.current_word)
        self.guessed_letters = set()
        self.update_display = 0
        self.label.config(text=" ".join(self.blank_list))
        self.hangman_label.config(text=HANGMANPICTURES[self.update_display])
        self.letter_bank_label.config(text="Guessed Letters: ")
        self.message.config(text="")
        self.entry.delete(0, tk.END)
        self.entry.config(state="normal")
        self.guess_button.config(state="normal")

    def make_guess(self):
        guess = self.entry.get().lower()
        self.entry.delete(0, tk.END)
        if not guess:
            self.message.config(text="You are supposed to enter a letter or the full word!")
            return
        if not guess.isalpha():
            self.message.config(text="Only letters are allowed! No numbers or special characters.")
            return

        if guess == "".join(self.current_word):
            self.score += 10 + 5 * self.blank_list.count("_")
            self.score_label.config(text=f"Score: {self.score}")
            self.message.config(text="Correct! Next word...")
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.master.after(1000, self.next_word)
            return

        if len(guess) == 1:
            if guess in self.guessed_letters:
                self.message.config(text=f"You already guessed '{guess}'")
                return
            self.guessed_letters.add(guess)
            self.letter_bank_label.config(
                text="Guessed Letters: " + " ".join(sorted(self.guessed_letters))
            )

        correct = False
        for i, letter in enumerate(self.current_word):
            if guess == letter:
                self.blank_list[i] = guess
                correct = True

        if not correct and len(guess) == 1:
            self.update_display += 1
            self.hangman_label.config(text=HANGMANPICTURES[self.update_display])
            if self.update_display >= len(HANGMANPICTURES) - 1:
                self.message.config(text=f"You lose! The word was: {''.join(self.current_word)}")
                self.entry.config(state="disabled")
                self.guess_button.config(state="disabled")
                self.save_score()
                self.master.after(1500, self.end_game)
                return

        self.label.config(text=" ".join(self.blank_list))
        self.hangman_label.config(text=HANGMANPICTURES[self.update_display])

        if self.blank_list == self.current_word:
            self.score += 10
            self.score_label.config(text=f"Score: {self.score}")
            self.message.config(text="Correct! Next word...")
            self.entry.config(state="disabled")
            self.guess_button.config(state="disabled")
            self.master.after(1000, self.next_word)

    def end_game(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        end_label = tk.Label(self.master, text="üíÄ Game Over! üíÄ", font=("Arial", 24, "bold"))
        end_label.pack(pady=(40, 10))
        score_label = tk.Label(self.master, text=f"Your Score: {self.score}", font=("Arial", 18))
        score_label.pack(pady=(0, 30))

        play_again_btn = tk.Button(self.master, text="Play Again?", font=("Arial", 14), bg="#e53935", fg="white",
                                   command=self.restart)
        play_again_btn.pack(pady=10)

        menu_btn = tk.Button(self.master, text="Return to Menu", font=("Arial", 14), bg="#1976d2", fg="white",
                             command=self.back_to_menu)
        menu_btn.pack(pady=10)

    def restart(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        OneLifeMode(self.master, self.return_to_menu_callback, self.player_name)

    def back_to_menu(self):
        for widget in self.master.winfo_children():
            widget.destroy()
        self.return_to_menu_callback()

# -------------------- Main block --------------------
if __name__ == "__main__":
    root = tk.Tk()
    root.attributes("-fullscreen", True)
    def handle_escape(event):
        if root.attributes("-fullscreen"):
            root.attributes("-fullscreen", False)
        else:
            root.destroy()
    root.bind("<Escape>", handle_escape)

    def launch_game(mode="main"):
        for widget in root.winfo_children():
            widget.destroy()
        if mode == "blitz":
            BlitzMode(root, lambda: StartScreen(root, launch_game))
        elif mode == "one_life":
            OneLifeMode(root, lambda: StartScreen(root, launch_game))
        else:
            HangmanGUI(root)

    StartScreen(root, launch_game)
    root.mainloop()
